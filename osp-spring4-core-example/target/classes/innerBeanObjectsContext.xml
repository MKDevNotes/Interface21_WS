<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id="triangleBean" class="com.osp.innerbean.example.Triangle">
		<!-- Trigger to create objects -->
		<!-- <property name="pointA" ref="zeroPoint"/> -->
		<property name="pointA">
			<ref bean="zeroPoint"/> <!-- only ref attribute works here, not the idref attribute -->
		</property> 
		
		<property name="name"> <!-- assigning the name of a bean correctly to a matching property "name" of type 'java.lang.String' in Square class -->
			<idref bean="zeroPoint"/>
		<!-- idref validates the existence of a bean with name "squarePointD".
		If bean exist, it will pass the bean name as string value to the caller
		If not exist, throws exception-->
		</property>

		<property name="pointB" >
			<bean class="com.osp.innerbean.example.Point">
				<property name="x" value="-20"/>
				<property name="y" value="0"/>		
			</bean>
		</property>
		
		<property name="pointC"  >
			<bean id="point3" class="com.osp.innerbean.example.Point">
				<property name="x" value="20"/>
				<property name="y" value="0"/>
			</bean>
		</property>
	</bean>
	
	<bean id="zeroPoint" class="com.osp.innerbean.example.Point">
		<property name="x" value="0"/>
		<property name="y" value="0"/>
	</bean>
	
	<alias name="triangleBean" alias="triangle-alias"/>
	
</beans>