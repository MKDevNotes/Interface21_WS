<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id="triangleBean" class="com.osp.beanfactorypostprocessor.example.Triangle">
		<!-- Trigger to create objects -->
		<property name="pointA" ref="zeroPoint" />
		<property name="pointB" ref="point2" />
		<property name="pointC" ref="point3" />
	</bean>
	
	<bean id="zeroPoint" class="com.osp.beanfactorypostprocessor.example.Point">
		<property name="x" value="${pointA.pointX}"/>
		<property name="y" value="${pointB.pointY}"/>
	</bean>
	
	<bean id="point2" class="com.osp.beanfactorypostprocessor.example.Point">
		<property name="x" value="-20"/>
		<property name="y" value="0"/>
	</bean>
	
	<bean id="point3" class="com.osp.beanfactorypostprocessor.example.Point">
		<property name="x" value="20"/>
		<property name="y" value="0"/>
	</bean>
	
	<!-- <bean class="com.osp.beanfactorypostprocessor.example.BeanFactoryPostProcessorExample"/> -->
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="classpath:pointsConfig.properties"/>
	</bean>
	
</beans>