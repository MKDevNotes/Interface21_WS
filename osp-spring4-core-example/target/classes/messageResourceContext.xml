		<property name="y" value="0"/>
	</bean>
	
	 <bean id="pointB" class="com.osp.messageresource.example.Point">
		<property name="x" value="-20"/>
		<property name="y" value="0"/>
	</bean>
	
	<bean id="center" class="com.osp.messageresource.example.Point">
		<property name="x" value="20"/>
		<property name="y" value="0"/>
	</bean>
