<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
         
      <bean id="triangleBean" class="com.osp.initializeCollection.example.Triangle">
		<!-- Trigger to create objects -->
		<property name="points">
			<list>
				<ref bean="zeroPoint"/>
				<ref bean="point2"/>
				<ref bean="point3"/>
			</list>
		</property>
	</bean>
	
	<bean id="zeroPoint" class="com.osp.initializeCollection.example.Point">
		<property name="x" value="0"/>
		<property name="y" value="0"/>
	</bean>
	
	<bean id="point2" class="com.osp.initializeCollection.example.Point">
		<property name="x" value="-20"/>
		<property name="y" value="0"/>
	</bean>
	
	<bean id="point3" class="com.osp.initializeCollection.example.Point">
		<property name="x" value="20"/>
		<property name="y" value="0"/>
	</bean>                      
</beans>