<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	<context:component-scan base-package="com.osp.autowireByName"/>

	<bean id="employeeBean" class="com.osp.autowireByName.EmployeeBean" autowire="byType">
		<property name="fullName" value="Muthukumar Thangavinayagam" /> <!-- Property Initialization -->
	</bean>
	
	<bean id="departmentExample" class="com.osp.autowireByName.DepartmentBean">
		<property name="name" value="Computer Science"/>
	</bean>
</beans>